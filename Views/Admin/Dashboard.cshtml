@model HastaneRandevuSistemi.Models.ApplicationUser

<div class="container mt-3">
    <h2 class="mb-4">Dashboard</h2>

    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kullanıcı Sayısı</h5>
                    <p class="card-text">@Model.TotalUserCount</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Toplam Hasta Sayısı</h5>
                    <p class="card-text">@Model.TotalContentCount</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Toplam Site Ziyaret Sayısı</h5>
                    <p class="card-text">@Model.TotalSiteVisits</p>
                </div>
            </div>
        </div>
    </div>
</div>
